<h1>Referees</h1>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Referee Id</th>
      <th>Name</th>
      <th>Age</th>
      <th></th>
    </tr>
  </thead>

  <% @referees.each do |referee| %>
    <tr>
      <td><%= referee.refereeid %></td>
      <td><%= referee.RefereeName %></td>
      <td><%= referee.Age %></td>
      <td><%= link_to "Show Matches", "/referees/matches/#{referee.refereeid}", class: 'btn btn-outline-success' %></td>
    </tr>
  <% end %>
</table>
