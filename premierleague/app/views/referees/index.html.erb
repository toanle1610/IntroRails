<h1>Referees</h1>
<table class="table">
  <thead class="thead-light">
    <th>Referee Id</th>
    <th>Name</th>
	  <th>Age</th>
    <th></th>
  </thead>

  <% @referees.each do |referee| %>
    <tr>
      <td><%= referee.RefereeId %></td>
      <td><%= referee.RefereeName %></td>
      <td><%= referee.Age %></td>
    </tr>
  <% end %>
</table>
