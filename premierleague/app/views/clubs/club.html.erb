<h1>Clubs</h1>

<nav class="float-right mt-2">
  <ul class="pagination pagination-sm">

    <li class="page-item">
      <a class="page-link" href="/clubs">First</a>
    </li>

    <% for i in 1..3 do %>
      <% if @page.to_i == i%>
      <li class="page-item active">
        <a remote="false" class="page-link"><%= i %></a>
      </li>
      <% else %>
      <li class="page-item">
        <a rel="next" class="page-link" href="/clubs?page=<%= i %>"><%= i %></a>
      </li>
      <% end %>
    <% end %>
    <li class="page-item">
      <a class="page-link" href="/clubs?page=3">Last</a>
    </li>
  </ul>
</nav>
<table class="table">
  <thead class="thead-light">
    <th>Position</th>
    <th>Image</th>
	  <th>Club</th>
    <th></th>
  </thead>
  <%
    temp = 1
    if @page.to_i == 1
      i = 1
    else
      i = (@page.to_i - 1) * 7 + 1
    end
  %>
  <% @clubs.each do |club| %>
    <% if temp >= i and temp < (i + 7) %>
      <tr>
        <td><%= temp %></td>
        <td><%= image_tag(club.ClubName + ".jpg") %></td>
        <td><%= link_to club.ClubName, clubs_show_url(club.ClubName) %></td>
      </tr>
    <% end %>

    <% if temp == (i + 7)
        break
      else
        temp += 1
      end %>

  <% end %>
</table>
