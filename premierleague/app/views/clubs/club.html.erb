<table class="table">
  <tr>
    <th>Position</th>
    <th>Image</th>
	  <th>Club</th>
    <th></th>
  </tr>
  <%
    temp = 1
    if @page.to_i == 1
      i = 1
    else
      i = (@page.to_i - 1) * 7 + 1
    end
  %>
  <% @clubs.each do |club| %>
    <% if temp >= i and temp < (i + 7) %>
      <tr>
        <td><%= temp %></td>
        <td><%= image_tag(club.ClubName + ".jpg") %></td>
        <td><%= link_to club.ClubName, clubs_show_url(club.ClubName) %></td>
      </tr>
    <% end %>

    <% if temp == (i + 7)
        break
      else
        temp += 1
      end %>

  <% end %>
</table>
